<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.feryafox.glamppc.Controllers.ServiceStageController">
   <children>
      <Button fx:id="restartAPBtn" mnemonicParsing="false" text="Перезагрузить в режим AP">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin></Button>
      <Button fx:id="restartLocalBtn" mnemonicParsing="false" text="Перезагрузить в режим Local">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin></Button>
      <Separator prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="53.0" prefWidth="412.0">
         <children>
            <TextField fx:id="wifiSSIDTextField" prefHeight="25.0" prefWidth="150.0" promptText="Логин">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="wifiPasswordTextField" layoutX="135.0" layoutY="24.0" prefHeight="25.0" prefWidth="150.0" promptText="Пароль">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin></TextField>
         </children></HBox>
      <Button fx:id="setWifiBtn" mnemonicParsing="false" text="Настроить WiFi">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Separator prefWidth="200.0" />
      <Button fx:id="makeMasterBtn" mnemonicParsing="false" text="Сделать Master'ом">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin></Button>
      <Button fx:id="makeSlaveBtn" mnemonicParsing="false" text="Сделать Slave'ом">
         <VBox.margin>
            <Insets bottom="10.0" top="5.0" />
         </VBox.margin></Button>
      <Separator layoutX="10.0" layoutY="171.0" prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="55.0" prefWidth="412.0">
         <children>
            <TextField fx:id="groupIdTextField" promptText="Номер группы">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="changeGroupBtn" mnemonicParsing="false" text="Сменить группу">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Separator layoutX="10.0" layoutY="245.0" prefWidth="200.0" />
      <Button fx:id="restartBtn" mnemonicParsing="false" text="Перезагрузить">
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin></Button>
      <Separator layoutX="10.0" layoutY="285.0" prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="timerTextField" prefHeight="25.0" prefWidth="209.0" promptText="В минутах (0 для отмены таймера)">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="timerBtn" mnemonicParsing="false" text="Таймер выключения">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
